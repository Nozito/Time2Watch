<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#FFFFFF"
    android:padding="5dp"
    tools:context=".BottomSheetDetailsFragment">

    <!-- Titre du film -->

    <ImageButton
        android:id="@+id/close_button"
        android:layout_width="28dp"
        android:layout_height="48dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="Fermer"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Date de sortie -->

    <ImageView
        android:id="@+id/detail_poster"
        android:layout_width="200dp"
        android:layout_height="287dp"
        android:layout_marginTop="8dp"
        android:clipToOutline="true"
        android:contentDescription="Affiche du film"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="1" />

    <!-- Synopsis du film -->
    <TextView
        android:id="@+id/detail_title"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingBottom="8dp"
        android:text="Titre du film"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.218"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_poster" />

    <TextView
        android:id="@+id/detail_release_date"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingBottom="8dp"
        android:text="Date de sortie : 2023-01-01"
        android:textColor="#FFDB58"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.215"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_title" />

    <!-- Bouton pour regarder la bande annonce -->
    <TextView
        android:id="@+id/detail_synopsis"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingBottom="16dp"
        android:text="Synopsis du film... Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus viverra, nunc sit amet vestibulum vulputate."
        android:textColor="#333333"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.215"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_release_date" />

    <Button
        android:id="@+id/btn_watch"
        android:layout_width="357dp"
        android:layout_height="50dp"
        android:background="@color/purple_500"
        android:elevation="6dp"
        android:padding="10dp"
        android:text="Regarder la bande annonce"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_synopsis" />


</androidx.constraintlayout.widget.ConstraintLayout>
